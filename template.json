{
  "apiVersion": "template.openshift.io/v1",
  "kind": "Template",
  "metadata": {
    "name": "${NAME}",
    "labels": {
      "app": "${NAME}"
      }
  },
  "objects": [
    {
      "apiVersion": "build.openshift.io/v1",
      "kind": "BuildConfig",
      "metadata": {
        "name": "${NAME}",
        "labels": {
          "app": "${NAME}"
        }
      },
      "spec": {
        "source": {
          "type": "Git",
          "git": {
            "uri": "https://github.com/imss-co-in/spring-boot-mongo-docker.git"
          },
          "contextDir": "/"
        },
        "strategy": {
          "type": "Docker",
          "dockerStrategy": {
            "dockerfilePath": "Dockerfile"
          }
        },
        "output": {
          "to": {
            "kind": "ImageStreamTag",
            "name": "${NAME}:latest"
          }
        }
      }
    },
    {
      "apiVersion": "image.openshift.io/v1",
      "kind": "ImageStream",
      "metadata": {
        "name": "${NAME}",
        "labels": {
          "app": "${NAME}"
        }
      }
    }
  ],
  "parameters": [
      {
       "name": "NAME",
       "displayName": "Name",
       "required": true,
       "description": "name of the application"
       "value": "${NAME}"
      }
  ] 
}
